<?xml version="1.0" ?>
<llsd xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="llsd.xsd">
<map>
  <!-- non-persisted settings -->
  <key>$vrEnabled</key>
  <map>
    <key>Comment</key><string>[vr-session] Toggles OpenVR enabled state</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>Boolean</string>
    <key>Value</key><integer>0</integer>
  </map>
  <!-- <key>$vrHMDRenderDebug</key>
  <map>
    <key>Comment</key><string>[vr-session] Use mock HMD device for render testing (capslock then toggles left/right eye preview).</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>Boolean</string>
    <key>Value</key><integer>0</integer>
  </map> -->
  <key>$vrRecenterHMD</key>
  <map>
    <key>Comment</key><string>[vr-session] recenter HMD (uses current pos as inverse transform)</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>Boolean</string>
    <key>Value</key><integer>0</integer>
  </map>
  <key>$vrFullscreen</key>
  <map>
    <key>Comment</key><string>[vr-session] Toggles fullscreen VR window mode.</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>Boolean</string>
    <key>Value</key><integer>0</integer>
  </map>
  <key>$vrCopySettingsToClipboard</key>
  <map>
    <key>Comment</key><string>[vr-session] (internal) settings trigger for dumping current values to system log and clipboard.</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>Boolean</string>
    <key>Value</key><integer>0</integer>
  </map>
  <key>$vrStatus</key>
  <map>
    <key>Comment</key><string>[vr-session] (internal) indicates current VR status (shown in VR Prefs)</string>
    <key>Persist</key><integer>0</integer>
    <key>Type</key><string>String</string>
    <key>Value</key><string></string>
  </map>
  
  <!-- persisted VR settings -->

      <key>$vrRightToolbarOffset</key>
      <map>
        <key>Comment</key><string>[vr] Offset the right toolbar by this percentage of viewport width.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>0.1</real>
      </map>
      <key>$vrCursorZooming</key>
      <map>
        <key>Comment</key><string>[vr] Toggles whether the screen auto pans and zooms to follow the mouse cursor (only applies to VR mode).
  Enable this if you need to access the top menu bar while in HMD.</string>
        <key>Persist</key><integer>1</integer>
        <key>Type</key><string>Boolean</string>
        <key>Value</key><integer>0</integer>
      </map>

      <key>$vrConfigVersion</key>
      <map>
        <key>Comment</key><string>[vr] (internal) tracks changes to vrsettings</string>
        <key>Persist</key><integer>1</integer>
        <key>Type</key><string>F32</string>
        <key>Value</key><real>0.0</real>
      </map>


      <key>$vrEyeDistance</key>
      <map>
        <key>Comment</key><string>[vr] Extra distance applied between left and right camera.
  In theory this value can remain zero (OpenVR already applies your IPD as part of its eye transform matrices).
  However, if objects appear too small or too big to expectations, try other values.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>32.000000</real>
      </map>
      <key>$vrFocusDistance</key>
      <map>
        <key>Comment</key><string>[vr] Stereoscopic focus distance in meters.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>3.000000</real>
      </map>
      <key>$vrNearClip</key>
      <map>
        <key>Comment</key><string>[vr] Distance to near clip plane (VR mode only)</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>0.01</real>
      </map>
      <!--key>$vrTextureShift</key>
      <map>
        <key>Comment</key><string>[vr] Applies a texture shift in case your HMD's focus point is not in the center of the texture.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>14.000000</real>
      </map-->
      <key>$vrUIShift</key>
      <map>
        <key>Comment</key><string>[vr] Applies a UI shift (adjusts the effective UI z-depth).</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>0.000000</real>
      </map>
      <key>$vrFullscreenUIScale</key>
      <map>
        <key>Comment</key><string>[vr] "UIScaleFactor" applied when in VR Fullscreen mode.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>0.5</real>
      </map>
      <key>$vrMouselookYawOnly</key>
      <map>
        <key>Comment</key><string>[vr] Limits Mouselook mode to only affecting Yaw (ie: to turning left and right).</string>
        <key>Persist</key><integer>1</integer>
        <key>Type</key><string>Boolean</string>
        <key>Value</key><integer>0</integer>
      </map>
      <!--key>$vrTextureZoom</key>
      <map>
        <key>Comment</key><string>[vr] Zooms the view in or out. It may help with wide FOV HMD's like Pimax.
  Zoom in reduces quality. Zoom out increases quality
  When this value is changed FOV must also be adjusted.</string>
        <key>Persist</key><integer>1</integer><key>Type</key><string>F32</string><key>Value</key>
        <real>0.000000</real>
      </map-->
</map>
</llsd>

